<h1 style = "text-align:center">MyWorkLog(<%=@logs.count%> logs)</h1>

<%=form_for :log, url: logs_path do |f| %>
	
	<div class="form-group">
		<%=f.text_field :title, class: "form-control",  placeholder: "Type the title of your log here ..."%>
	</div>
	
	<div class="form-group">
		<%=f.text_area :body, class: "form-control", placeholder: "Type description here..."%>
	</div>

	<%= f.submit "Submit", class: "btn btn-lg btn-primary center-block", style: "margin-bottom:10px"%>
<%end%>

<% @logs.each do |log|%>
<div class = "panel panel-default">
    <div class="panel-heading">

        <h4 class="panel-title"><%=log.title.split.map(&:capitalize).join(' ')%></h4>

    </div>
<div class="panel-body">
		
		<%=log.body.capitalize%><br/>


</div>
    <div class="panel-footer ">
			<%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger"  %>
			<small class="pull-right"><%=time_ago_in_words(log.created_at)%> ago</small>

    </div>
</div>

<%end%>